# .env.example
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=""

# JWT Secret for session tokens
# Generate a secure random string for production
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"

# Application Settings
NEXTAUTH_URL="https://one-step-one.vercel.app/"
NEXTAUTH_SECRET="another-secret-for-nextauth-if-using"

# Telegram OAuth (for social login)
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"
TELEGRAM_BOT_USERNAME="@OneStepTest6_BOT"
TELEGRAM_WEBHOOK_URL="https://one-step-one.vercel.app/api/telegram/webhook"
TELEGRAM_SECRET_TOKEN="your_telegram_bot_token"

# Security Settings
# Enable rate limiting
ENABLE_RATE_LIMITING="true"
# Max login attempts per IP per hour
MAX_LOGIN_ATTEMPTS="10"
# Session duration in days
SESSION_DURATION_DAYS="7"

# WebAuthn Configuration
# Your domain for WebAuthn (biometric authentication)
WEBAUTHN_ORIGIN="https://one-step-one.vercel.app/"
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_RP_NAME="OneStep Authentication"

# Development Settings
NODE_ENV="development"
# Enable debug logging
DEBUG="true"
